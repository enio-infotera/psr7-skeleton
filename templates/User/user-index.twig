{% extends "Layout/layout.twig" %}

{% block assets %}
    {{ assets({files: [
        '@public/js/jquery.dataTables.min.js',
        '@public/js/dataTables.bootstrap4.min.js',
    ], name: 'datatable.js'}) }}

    {{ assets({files: [
        'User/user-index.js',
    ], name: 'user-index.js'}) }}

    {{ assets({files: [
        '@public/css/dataTables.bootstrap4.min.css',
    ], name: 'datatable.css'}) }}
{% endblock %}

{% block content %}
    <div id="content" class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>{{ __('User list') }}</h1>
                <button id="add-user" type="button" class="btn btn-primary">{{ __('Add user') }}</button>
                <hr>
                <table id="data-table" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed">
                    <thead>
                    <tr>
                        <th>{{ __('Username') }}</th>
                        <th>{{ __('E-Mail') }}</th>
                        <th>{{ __('First name') }}</th>
                        <th>{{ __('Last name') }}</th>
                        <th>{{ __('Role') }}</th>
                        <th>{{ __('Enabled') }}</th>
                        <th>{{ __('Created at') }}</th>
                        <th>{{ __('Action') }}</th>
                    </tr>
                    <tfoot></tfoot>
                </table>
                <p></p>
            </div>
        </div>
    </div>
{% endblock %}
